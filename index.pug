extends layout/layout.pug
block headstyles
  style(type="text/css").
    .main-menu .hover {
      position: absolute;
      z-index: 9;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%) scale(0);
      transition: transform .3s;
      pointer-events: none;
      border-radius: 299px/162px;

      display: block;
      width: 592px;
      height: 325px;
      background: #1E30E3;
    }

block append scripts 
  script(src="./src/js/gl.js" defer)
block content
  .index-wrapper
    canvas#backCanvas(width="200" height="200")
    main.main
      .main-header
        .main-container
          a.main-menu(href="./menu.pug")
            span.text
              | MENU
            span.hover
          a.main-club(href="./card.pug")
            | AND Y CLUB
      .main-logo
      .main-instagramm
        .main-instagramm__wrapper
          .main-instagramm__icon
          a(href="https://www.instagram.com/andy_food/").main-instagramm__link
            | instagram
        .main-instagramm__address
          | 344006, PUSHKINSKAYA 158/56, ROSTOV-ON-DON, RUSSIA
      include includes/footer.pug
    
